<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top_bar">
			<h1>EAT DA BURGER!</h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
				{{#each burger_data}}
					{{#unless this.devoured}}
					<div class="col-xs-9 text-center">
							<pre>{{this.id}}. {{this.burger_name}}</pre>
					</div>
					<div class="col-xs-3 text-center">
						<form class="button-size" action="burger/update?_method=PUT" method="POST">
							<input type="hidden" name="burger_id" value={{this.id}}>
							<br>
							<button type="submit" class="btn btn-default">DEVOUR IT!</button>
						</form>
					</div>
						{{/unless}}
					{{/each}}
			</div>
		</div>

		<div class="col-xs-6 text-center" class="task">
			{{#each burger_data}}
				{{#if this.devoured}}
				<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-xs text-center enter_section">
				<form action="burger/create" method="POST">
					<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
					<button type="submit" class="btn btn-primary" id="text-enter">SUBMIT</button>
				</form>
				<p>Enter in the burger you would like to eat!</p>
			</div>

		</div>

	</div>
</div>
